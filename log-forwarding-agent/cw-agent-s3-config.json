{
    "agent": {
      "region": "us-east-2", // Corrected: Use Region, not Availability Zone
      "run_as_user": "root"
    },
    "logs": {
      "logs_collected": {
        "files": {
          "collect_list": [
            {
              // --- Configuration for your Mock App Log ---
              "file_path": "/var/log/mock_app.log",
              "log_group_name": "mock-app-logs",
              "log_stream_name": "{instance_id}-mock-app",
              "timestamp_format": "%Y-%m-%dT%H:%M:%S.%fZ",
              "timezone": "UTC",
  
              // --- S3 Export Configuration ---
              "s3_bucket": "siemtool-ccs", // Your bucket name
              "s3_prefix": "mock-app-logs/{instance_id}/{datetime:%Y}/{datetime:%m}/{datetime:%d}/{datetime:%H}",
              "s3_upload_frequency": 30 // Upload logs every 300 seconds (5 minutes)
            }
          ]
        }
      },
      // Optional: Configure agent's own logging for debugging
      "log_stream_name": "cloudwatch_agent.log",
      "force_flush_interval": 15
    }
  }
  